<UserControl x:Class="MFPControlCenter.Views.PrintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:MFPControlCenter.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <UserControl.DataContext>
        <vm:PrintViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель настроек -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Печать" Style="{StaticResource HeaderTextStyle}" FontSize="18"/>

                <!-- Выбор файла -->
                <materialDesign:Card Padding="10" Margin="0,0,0,8">
                    <StackPanel>
                        <Button Command="{Binding SelectFileCommand}"
                                HorizontalAlignment="Stretch"
                                Height="36"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocument" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="Выбрать файл" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="{Binding FileName}"
                                   Margin="0,6,0,0"
                                   FontSize="11"
                                   TextTrimming="CharacterEllipsis"
                                   Visibility="{Binding FileName, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Выбор принтера -->
                <materialDesign:Card Padding="10" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Принтер:" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding AvailablePrinters}"
                                  SelectedItem="{Binding SelectedPrinter}"
                                  Margin="0,3,0,0"
                                  Height="32"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Настройки печати -->
                <materialDesign:Card Padding="10" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Настройки" Style="{StaticResource SectionHeaderStyle}" FontSize="14" Margin="0,0,0,5"/>

                        <!-- Количество копий -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Копий:" VerticalAlignment="Center" FontSize="12"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}"
                                     Width="50" Height="28" TextAlignment="Center"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </Grid>

                        <!-- Двусторонняя печать -->
                        <CheckBox Content="Двусторонняя (дуплекс)"
                                  IsChecked="{Binding IsDuplex}"
                                  FontSize="12"
                                  Margin="0,8,0,0"/>

                        <!-- Диапазон страниц -->
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Страницы:" FontSize="12"/>
                            <TextBox Text="{Binding PageRange, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="все, 1-5, 1,3,5"
                                     Margin="0,3,0,0"
                                     Height="28"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </StackPanel>

                        <!-- Размер бумаги и ориентация -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Бумага:" FontSize="12"/>
                                <ComboBox ItemsSource="{Binding PaperSizes}"
                                          SelectedItem="{Binding SelectedPaperSize}"
                                          Margin="0,3,0,0"
                                          Height="28"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="Ориентация:" FontSize="12"/>
                                <ComboBox ItemsSource="{Binding Orientations}"
                                          SelectedItem="{Binding SelectedOrientation}"
                                          Margin="0,3,0,0"
                                          Height="28"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Кнопка настроек изображения -->
                        <Button Command="{Binding OpenImageSettingsCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0"
                                Height="32"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Tune" VerticalAlignment="Center" Margin="0,0,6,0" Width="16" Height="16"/>
                                <TextBlock Text="Настройки изображения" FontSize="11"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Кнопка печати -->
                <Button Command="{Binding PrintCommand}"
                        IsEnabled="{Binding IsPrinting, Converter={StaticResource InverseBooleanConverter}}"
                        HorizontalAlignment="Stretch"
                        Height="40">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Printer" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="ПЕЧАТЬ" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <!-- Статус -->
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="0,8,0,0"
                           TextAlignment="Center"
                           FontSize="11"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Область предпросмотра -->
        <materialDesign:Card Grid.Column="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Предпросмотр" Style="{StaticResource SectionHeaderStyle}" FontSize="14" Margin="0,0,0,5"/>

                <!-- Область просмотра страницы -->
                <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="4">
                    <Grid>
                        <Image Source="{Binding PreviewImage}"
                               Stretch="Uniform"
                               Margin="5"/>

                        <TextBlock Text="Выберите файл"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="Gray"
                                   Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>

                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Value="0"
                                         IsIndeterminate="True"
                                         Width="40" Height="40"/>
                            <TextBlock Text="Загрузка..."
                                       Margin="0,8,0,0"
                                       FontSize="11"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Навигация по страницам -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Visibility="{Binding HasMultiplePages, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button Command="{Binding FirstPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="28" Height="28">
                        <materialDesign:PackIcon Kind="PageFirst" Width="18" Height="18"/>
                    </Button>
                    <Button Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="28" Height="28">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="18" Height="18"/>
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="8,0"/>

                    <Button Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="28" Height="28">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="18" Height="18"/>
                    </Button>
                    <Button Command="{Binding LastPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="28" Height="28">
                        <materialDesign:PackIcon Kind="PageLast" Width="18" Height="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
