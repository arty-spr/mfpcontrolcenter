<UserControl x:Class="MFPControlCenter.Views.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:MFPControlCenter.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.DataContext>
        <vm:ScanViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель настроек -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Сканирование" Style="{StaticResource HeaderTextStyle}"/>

                <!-- Источник сканирования -->
                <materialDesign:Card Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Источник" Style="{StaticResource SectionHeaderStyle}"/>

                        <ComboBox ItemsSource="{Binding Sources}"
                                  SelectedItem="{Binding SelectedSource}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ScanSourceConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Настройки качества -->
                <materialDesign:Card Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Качество сканирования" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- DPI -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Разрешение (DPI):"/>
                            <ComboBox ItemsSource="{Binding DpiValues}"
                                      SelectedItem="{Binding SelectedDpi}"
                                      Margin="0,5,0,0"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </StackPanel>

                        <!-- Цветовой режим -->
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Цветовой режим:"/>
                            <ComboBox ItemsSource="{Binding ColorModes}"
                                      SelectedItem="{Binding SelectedColorMode}"
                                      Margin="0,5,0,0"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource ColorModeConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Формат сохранения -->
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Формат файла:"/>
                            <ComboBox ItemsSource="{Binding Formats}"
                                      SelectedItem="{Binding SelectedFormat}"
                                      Margin="0,5,0,0"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Кнопки действий -->
                <materialDesign:Card Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Действия" Style="{StaticResource SectionHeaderStyle}"/>

                        <Button Command="{Binding PreviewCommand}"
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Stretch"
                                Margin="0,5,0,0"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Eye" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Предпросмотр"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ScanCommand}"
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Stretch"
                                Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Scanner" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Сканировать"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ScanMultipleCommand}"
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Stretch"
                                Margin="0,10,0,0"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileMultiple" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Сканировать из ADF"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,15"/>

                        <Button Command="{Binding SaveCommand}"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Сохранить"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ClearCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,5,0,0"
                                Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Очистить"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Прогресс -->
                <ProgressBar Value="{Binding Progress}"
                             Minimum="0" Maximum="100"
                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Статус -->
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="0,10,0,0"
                           TextAlignment="Center"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Область предпросмотра -->
        <materialDesign:Card Grid.Column="1" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Результат сканирования" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="4">
                    <Grid>
                        <Image Source="{Binding PreviewImage}"
                               Stretch="Uniform"
                               Margin="10"/>

                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <materialDesign:PackIcon Kind="Scanner"
                                                     Width="64" Height="64"
                                                     Foreground="LightGray"
                                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Нажмите 'Сканировать' для начала"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Навигация по страницам -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Visibility="{Binding TotalPages, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}">
                    <Button Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="ChevronLeft"/>
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                               VerticalAlignment="Center"
                               Margin="10,0"/>

                    <Button Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="ChevronRight"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
