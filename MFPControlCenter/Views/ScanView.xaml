<UserControl x:Class="MFPControlCenter.Views.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:MFPControlCenter.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <UserControl.DataContext>
        <vm:ScanViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель настроек -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Сканирование" Style="{StaticResource HeaderTextStyle}" FontSize="18"/>

                <!-- Настройки качества -->
                <materialDesign:Card Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Настройки" Style="{StaticResource SectionHeaderStyle}" FontSize="14" Margin="0,5,0,5"/>

                        <!-- DPI -->
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Разрешение (DPI):" FontSize="12"/>
                            <ComboBox ItemsSource="{Binding DpiValues}"
                                      SelectedItem="{Binding SelectedDpi}"
                                      Margin="0,3,0,0"
                                      Height="32"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </StackPanel>

                        <!-- Цветовой режим -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Цвет:" FontSize="12"/>
                            <ComboBox ItemsSource="{Binding ColorModes}"
                                      SelectedItem="{Binding SelectedColorMode}"
                                      Margin="0,3,0,0"
                                      Height="32"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource ColorModeConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Формат сохранения -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Формат:" FontSize="12"/>
                            <ComboBox ItemsSource="{Binding Formats}"
                                      SelectedItem="{Binding SelectedFormat}"
                                      Margin="0,3,0,0"
                                      Height="32"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Кнопки действий -->
                <materialDesign:Card Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <Button Command="{Binding ScanCommand}"
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Stretch"
                                Height="40">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Scanner" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Сканировать" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Command="{Binding SaveCommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,4,0"
                                    Height="36"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,4,0" Width="18" Height="18"/>
                                    <TextBlock Text="Сохранить" VerticalAlignment="Center" FontSize="12"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1"
                                    Command="{Binding ClearCommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="4,0,0,0"
                                    Height="36"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,4,0" Width="18" Height="18"/>
                                    <TextBlock Text="Очистить" VerticalAlignment="Center" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Прогресс -->
                <ProgressBar Value="{Binding Progress}"
                             Minimum="0" Maximum="100"
                             Height="4"
                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Статус -->
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="0,8,0,0"
                           TextAlignment="Center"
                           FontSize="12"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Область предпросмотра -->
        <materialDesign:Card Grid.Column="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Результат" Style="{StaticResource SectionHeaderStyle}" FontSize="14" Margin="0,0,0,5"/>

                <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="4">
                    <Grid>
                        <Image Source="{Binding PreviewImage}"
                               Stretch="Uniform"
                               Margin="5"/>

                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <materialDesign:PackIcon Kind="Scanner"
                                                     Width="48" Height="48"
                                                     Foreground="LightGray"
                                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Нажмите 'Сканировать'"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"
                                       FontSize="12"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Навигация по страницам -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Visibility="{Binding TotalPages, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}">
                    <Button Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                    </Button>

                    <TextBlock Text="{Binding PageInfo}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="8,0"/>

                    <Button Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
